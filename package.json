{
  "name": "clipvault",
  "version": "1.1.3",
  "description": "Lightweight game clipping tool",
  "author": "ClipVault Team",
  "license": "GPL-2.0-or-later",
  "type": "module",
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rcedit": "^4.0.1"
  },
  "scripts": {
    "postinstall": "scripts\\postinstall.cmd",
    "backend:setup": "powershell -ExecutionPolicy Bypass -File .\\build.ps1 -Setup",
    "backend:build": "powershell -ExecutionPolicy Bypass -File .\\build.ps1",
    "backend:clean": "powershell -ExecutionPolicy Bypass -File .\\build.ps1 -Clean",
    "backend:debug": "powershell -ExecutionPolicy Bypass -File .\\build.ps1 -Debug",
    "dev": "npm --prefix ui run dev",
    "build": "npm --prefix ui run build",
    "build:all": "npm run backend:build && npm run build",
    "build:react": "npm --prefix ui run build:react",
    "build:electron": "npm --prefix ui run build:electron",
    "dist": "npm --prefix ui run dist",
    "dist:win": "npm --prefix ui run dist:win",
    "dist:portable": "npm --prefix ui run dist:portable",
    "package:portable": "npm run backend:build && npm run dist:portable",
    "package:win": "npm run backend:build && npm run dist:win",
    "lint": "npm --prefix ui run lint",
    "lint:fix": "npm --prefix ui run lint:fix",
    "typecheck": "npm --prefix ui run typecheck",
    "format": "npm --prefix ui run format",
    "format:check": "npm --prefix ui run format:check",
    "test": "npm --prefix ui run test:ui",
    "ui:dev": "npm --prefix ui run dev",
    "ui:build": "npm --prefix ui run build",
    "ui:lint": "npm --prefix ui run lint",
    "ui:lint:fix": "npm --prefix ui run lint:fix",
    "ui:typecheck": "npm --prefix ui run typecheck",
    "ui:format": "npm --prefix ui run format",
    "ui:format:check": "npm --prefix ui run format:check",
    "ui:test": "npm --prefix ui run test:ui"
  }
}
