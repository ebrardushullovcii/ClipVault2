{
  "name": "clipvault-ui",
  "version": "1.0.1",
  "description": "ClipVault Editor UI - Modern video clip library and editor",
  "main": "dist/main/main.js",
  "author": "ClipVault Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "npm run build:electron && vite",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p src/main/tsconfig.json",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "postinstall": "electron-builder install-app-deps && cd native/thumbnail-addon && npm install",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "test:ui": "npm run lint && npm run typecheck && npm run format:check"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "electron-store": "^8.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.294.0",
    "postcss": "^8.4.32",
    "prettier": "^3.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.1",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.clipvault.editor",
    "productName": "ClipVault",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../64x64.png",
        "to": "64x64.png"
      },
      {
        "from": "native/thumbnail-addon/build/Release",
        "to": "native/thumbnail-addon",
        "filter": [
          "*.node"
        ]
      },
      {
        "from": "src/main",
        "to": "native/thumbnail-addon",
        "filter": [
          "thumbnail-extractor.cjs"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icons/icon_256.png",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false,
      "forceCodeSigning": false,
      "publisherName": "ClipVault"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ClipVault",
      "menuCategory": "ClipVault",
      "include": "build/installer.nsh",
      "artifactName": "ClipVault-Setup-${version}.exe"
    },
    "portable": {
      "artifactName": "ClipVault-Portable.exe"
    }
  }
}
